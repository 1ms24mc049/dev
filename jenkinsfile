pipeline {
    agent any
    environment {
        DOCKERHUB_CRED = credentials('dockerhubid')
        IMAGE_NAME = "1ms24mc049/dev"
    }
triggers{
    cron('* * * * *')
}
    
    stages {
        stage('checkout') {
            steps { git url: 'https://github.com/1ms24mc049/dev.git/', branch: 'main' }
        }
        stage('Build Docker Image') {
            steps {
                script { dockerImage = docker.build("${IMAGE_NAME}:latest") }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhubid') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
    post {
        success { echo "Pipeline Successful" }
        failure { echo "Pipeline Failed" }
        always { deleteDir() }
    }
}
